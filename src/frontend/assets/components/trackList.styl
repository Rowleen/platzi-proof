@import "styles/variables"

.genres-wrapper
  display: flex
  margin: 3rem 0
  align-items: center

  .genres
    display: flex
    padding-left: 2rem

    .pill-clear
      cursor: pointer
      align-items: center
      height: 1.8rem
      border-radius: border-radius-elements
      padding: .1rem .8rem
      margin-right: .4rem
      text-align: center
      color: white
      background-color: rgba(0, 0, 0, .5)
      border: solid 1px black
      transition: all .2s ease
      display: none

      &.show
        display: flex

      &:hover
        background-color:rgba(0, 0, 0, .65)
        border-color: primary-color

        >.icon-times
          color: white
          transform: rotate(270deg)

      .icon-times
        color: primary-color
        margin-left: .5rem
        transition: transform .25s ease-in

.tracks-grid  
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(14rem, 1fr))
  grid-column-gap: 2rem
  grid-row-gap: 2rem
