@import "styles/variables"

.lyric-wrapper
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  display: flex
  justify-content: center
  align-items: center
  opacity: 0
  z-index: -1
  transition: all .2s ease
  background-color: rgba(255, 255, 255, .2)

  &.show-lyric
    opacity: 1
    z-index: 1

  .lyric-container
    position: relative
    width: 100%
    max-width: 40rem
    height: auto
    background-color: background-color-accent
    border-radius: border-radius-containers
    
    .close-lyric
      cursor: pointer
      position: absolute
      top: 1rem
      right: 1rem
      color: white
      font-size: 2rem
    
    .lyric-body
      height: auto
      color: white
      overflow-y: auto 
      padding: 2rem

