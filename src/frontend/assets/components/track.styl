@import 'styles/variables'

.track-wrapper
  width: 100%
  height auto

  .cover
    cursor: pointer
    display: flex
    flex-direction: column
    align-items: center
    padding: 1.4rem .5rem 1rem
    background-color: rgba(0, 0, 0, 0.4)
    border-radius: border-radius-containers
    margin-bottom: 0.3rem
    transition: background-color 0.2s ease

    &:hover
      background-color: rgba(0, 0, 0, 0.5)

      >.icon-play
        color: primary-color

    .icon-play
      font-size: 4rem
      color: white
      margin-bottom: .5rem
      transition: color 0.2s ease

    .track-title
      width: 100%
      font-size: 1.5rem
      background: linear-gradient(90deg, #ED8770, #D9519D)
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: unset
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      text-align: center

  .track-info
    display: flex
    flex-direction: column

    .artist
      color: white
      margin-bottom: .5rem

    .genres
      display: flex
      flex-flow: row wrap

      .genre
        border-radius: border-radius-elements
        padding: .1rem .8rem
        margin-bottom: .3rem
        margin-right: .3rem
        text-align: center
        color: white

        &:nth-child(1n+0)
          background-color: primary-color

        &:nth-child(2n+0)
          background-color: secondary-color

        &:nth-child(3n+0)
          background-color: third-color


    