@import 'variables'

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body {
  overflow-x: hidden
  width: 100vw
  height: 100vh
  font-size: 1rem
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: backgroundColor
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
}

.section-title
  color: text-color

.app
  width: 100vw
  height: auto
  display: flex
  justify-content: center
  align-items: center
  padding: 0 1rem;

  .content 
    width: 100%
    min-height: calc(100vh - (59px + 53px))
    max-width: 1200px
    padding: 2rem 0

    .form
      width: 100%
      height: auto
      display: flex;
      justify-content: center

      &:focus-within
        .button, .select, .input
          outline: unset
          color: white
          outline: unset
          border-color: primary-color
          background-color: rgba(background-color-accent, .6)

          .icon
            color: white

      .input
        width: 23rem
        height: 3rem
        border: solid 1px lightGrey
        padding: .5rem 0 .5rem 1.5rem
        background-color: background-color-accent;
        border-bottom-left-radius: border-radius-elements
        border-top-left-radius: border-radius-elements
        font-size: 1.5rem
        color: white
        border-color: background-color-accent
        border-right: unset
        transition: all .2s ease

      .select
        width: 8rem
        font-size: 1rem
        color: white
        padding: 0 .8rem
        color: disabled-text
        border: solid 1px
        border-left: unset
        border-right: unset
        outline: unset
        border-color: background-color-accent;
        background-color: background-color-accent;
        transition: all .2s ease

      .button
        cursor: pointer
        width: 4rem
        display: flex
        align-items: center
        justify-content: center
        background-color: background-color-accent
        border: solid 1px
        border-left: unset
        border-color: background-color-accent
        border-top-right-radius: border-radius-elements
        border-bottom-right-radius: border-radius-elements
        transition: all .2s ease

        &:hover 
          background-color: rgba(background-color-accent, .4)

        &:focus
          outline: unset

        .icon
          font-size: 1.5rem
          color: disabled-text

@media (max-width: 600px) {
  .facet_sidebar {
    display: none;
  }
}