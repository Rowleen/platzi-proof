@import 'variables'

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body
  overflow-x: hidden
  width: 100vw
  height: 100vh
  font-size: 1rem
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: backgroundColor

.no-overflow
    overflow hidden

code
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',

.section-title
  color: text-color

.app
  width: 100vw
  height: auto
  display: flex
  justify-content: center
  align-items: center
  padding: 0 1rem;

  .content
    width: 100%
    min-height: calc(100vh - (59px + 53px))
    max-width: 1200px
    padding: 2rem 0

@media (max-width: 414px)
  .app .content .form
    .form-elements
      width: 100%

      .input
        width: 100%
        max-width: 100%

      .select
        display: none

    .welcome-text
      width: 100%