@import 'variables'

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body {
  width: 100vw
  height: 100vh
  font-size: 1rem
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: backgroundColor
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
}

.section-title
  color: $dark-grey

.app
  width: 100vw
  height: auto
  display: flex
  justify-content: center
  align-items: center

  .content 
    width: 100%
    max-width: 1200px
    padding: 2rem 1rem;;

    .form
      width: 100%
      height: auto
      display: flex;
      justify-content: center

      .input
        width: 30rem
        height: 3rem
        border: solid 1px lightGrey
        padding: .5rem .8rem
        border-top-left-radius: border-radius-elements
        border-bottom-left-radius: border-radius-elements
        background-color: white;
        border-color: $grey;
        font-size: 1.5rem

        &:focus
          outline: unset
          border-color: primary-color

      .button
        width: 3rem
        display: flex
        align-items: center
        justify-content: center
        background-color: primary-color
        border: 0
        border-top-right-radius: border-radius-elements
        border-bottom-right-radius: border-radius-elements

        .icon
          font-size: 1.5rem
          color: white
  

