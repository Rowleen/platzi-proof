@import 'variables'

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body {
  overflow-x: hidden
  width: 100vw
  height: 100vh
  font-size: 1rem
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-color: backgroundColor
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
}

.section-title
  color: text-color

.app
  width: 100vw
  height: auto
  display: flex
  justify-content: center
  align-items: center

  .content 
    width: 100%
    max-width: 1200px
    padding: 2rem 0

    .form
      width: 100%
      height: auto
      display: flex;
      justify-content: center
      margin-bottom: 2rem

      .input
        width: 30rem
        height: 3rem
        border: solid 1px lightGrey
        padding: .5rem .8rem
        border-top-left-radius: border-radius-elements
        border-bottom-left-radius: border-radius-elements
        background-color: background-color-accent;
        border-color: background-color-accent
        font-size: 1.5rem
        color: white
        border-right: unset

        &:focus
          outline: unset
          border-color: primary-color

          +.button
            outline: unset
            border-color: primary-color

      .button
        cursor: pointer
        width: 4rem
        display: flex
        align-items: center
        justify-content: center
        background-color: background-color-accent
        border: solid 1px
        border-left: unset
        border-color: background-color-accent
        border-top-right-radius: border-radius-elements
        border-bottom-right-radius: border-radius-elements

        &:hover 
          background-color: primary-color-hover

        &:focus
          outline: unset

        .icon
          font-size: 1.5rem
          color: white